FROM maven:3.6.0-jdk-11-slim AS build
WORKDIR /home/app
COPY src /home/app/
COPY pom.xml /home/app

RUN mvn -f /home/app/pom.xml clean package

FROM tomcat:9.0.65-jdk11-corretto-al2
#tomcat:9.0.65-jre17
#tomcat:9.0.65-jdk11-corretto-al2

RUN rm -rf /usr/local/tomcat/webapps/*
COPY --from=build /home/app/target/DockerPractice.war /usr/local/tomcat/webapps/
EXPOSE 8080
CMD ["catalina.sh", "run"]